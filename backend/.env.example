# LLM Configuration
MODEL_TYPE=OPENAI
OPENAI_API_KEY=your_openai_api_key
BASE_MODEL_NAME=gpt-3.5-turbo

# MongoDB Configuration - When running with Docker Compose, this will be overridden
MONGO_URI=mongodb://localhost:27017/chatbot

# API Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO

# Chat Configuration
HUMAN_PREFIX=Human
AI_PREFIX=AI
COLLECTION_NAME=chat_histories

# PII Protection (optional)
ENABLE_ANONYMIZER=false

# LangSmith Configuration (optional, for tracing and debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=chatbot-project

# Search Tool Configuration (optional)
SERPAPI_API_KEY=your_serpapi_key